<Page
    x:Class="HealthAndGlow.Views.ProductDetailScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HealthAndGlow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Views="using:HealthAndGlow.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="ButtonStyle1" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle x:Name="AddtoCartBtn"  RadiusY="22.139" RadiusX="22.139" Fill="#FFFF8C03"  Stroke="Black"/>
                            <ContentPresenter Content="ADD TO BAG" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <!--<Button Name="AddToCartBtn" Click="AddToCartBtn_Click" Content="ADD TO BAG" HorizontalAlignment="Left" Height="57" Margin="77,533,0,0" Style="{StaticResource ButtonStyle1}" VerticalAlignment="Top" Width="236" />-->
        <!--<Grid HorizontalAlignment="Left" Height="45" Margin="0,1,0,0" Background="Orange" VerticalAlignment="Top" Width="399">
            <Image Source="/Assets/healthglowLogo.png" Width="200" Height="40" Stretch="Fill"/>
        </Grid>-->
        <Image x:Name="ProductImage" HorizontalAlignment="Left" Height="325" Margin="8,75,0,0" VerticalAlignment="Top" Width="385" Source="ms-appx:///Assets/Product1.png" Stretch="Fill" />
        <Image x:Name="ImgBtnAddToCart" HorizontalAlignment="Left" Height="50" Margin="14,542,0,0" VerticalAlignment="Top" Width="130" Source="ms-appx:///Assets/AddtoCartButton.png" Stretch="Fill"/>
        <Image x:Name="ImgBtnBuyNow" HorizontalAlignment="Left" Height="50" Margin="171,543,0,0" VerticalAlignment="Top" Width="190" Source="ms-appx:///Assets/BuyNowButton.png" Stretch="Fill" RenderTransformOrigin="2.245,0.947"/>

        <TextBlock x:Name="TxtBlkProductPrice" HorizontalAlignment="Left" Foreground="Black" FontSize="22" Margin="5,477,0,114"  Text="Rs.1499" TextWrapping="Wrap" VerticalAlignment="Center"  TextAlignment="Center" FontWeight="Bold"  Height="29" Width="97"/>
        <TextBlock x:Name="TxtBlkProductDescription" TextAlignment="Left" HorizontalAlignment="Left" Foreground="Black" FontSize="22" Margin="4,397,0,149"  Text="Studio Secret : annagaspi Vibrating applicator with Gold Foundation" TextWrapping="Wrap" VerticalAlignment="Center"   FontWeight="Bold"  Height="64" Width="383" RenderTransformOrigin="0.5,0.5"/>

        <!--<TextBlock HorizontalAlignment="Left" Foreground="Black" FontSize="22" Margin="163,421,0,189"  Text="2" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"  Height="30" Width="31"/>
        <TextBlock HorizontalAlignment="Left" Foreground="Black" FontSize="22" Margin="172,269,0,342"  Text="Our Price :" TextWrapping="Wrap" VerticalAlignment="Center"  TextAlignment="Center" FontWeight="Bold"  Height="29" Width="123"/>-->

        <!--<Image Source="ms-appx:///Assets/plus.png" HorizontalAlignment="Left" Height="32" Margin="198,418,0,0" VerticalAlignment="Top" Width="43" Stretch="Fill"/>
        <Image Source="ms-appx:///Assets/minus.png" HorizontalAlignment="Left" Height="32" Margin="118,418,0,0" VerticalAlignment="Top" Width="43" Stretch="Fill"/>-->
        <Views:TitleBar x:Name="TitleBarControl" HorizontalAlignment="Left" Width="400" VerticalAlignment="Top" Grid.Row="0"/>

    </Grid>
</Page>

