<Page
    x:Class="HealthAndGlow.Views.SearchResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HealthAndGlow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Views="using:HealthAndGlow.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar>
            <!--<AppBarButton x:Uid="AddAppBarButton" x:Name="AddAppBarButton" Label="add" Icon="Add" Click="AddAppBarButton_Click" />-->
            <AppBarButton x:Name="SearchAppBarButton" Label="search" Icon="Find" Click="SearchAppBarButton_Click" />
        </CommandBar>
    </Page.BottomAppBar>


    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Views:TitleBar x:Name="TitleBarControl" HorizontalAlignment="Left" Width="400" VerticalAlignment="Top" Grid.Row="0"/>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Search products"
                       Foreground="Black"
                       FontSize="24"
                       Margin="12,12,12,12"/>            
            <TextBox x:Name="SearchTextBox" 
                     Margin="12,0,10,0"
                     BorderBrush="Black"/>

            <TextBlock x:Name="ProductsFound" 
                       FontSize="30"
                       Foreground="Black"
                       Margin="12,30,10,0"/>
        </StackPanel>

        <Grid Grid.Row="2" Background="White">
            <GridView Grid.Row="2" 
                      Name="ProductsGridView" 
                      IsItemClickEnabled="True" 
                      ItemClick="ProductsGridView_ItemClick" 
                      HorizontalAlignment="Center" 
                      Height="400" Margin="10,0,0,0" VerticalAlignment="Top" Width="400"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="30"></ColumnDefinition>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                                <Border BorderBrush="LightGray" BorderThickness="1">
                                <Image  Source="{Binding SkuImageUrl}"
                                        Height="150"
                                        Width="150"/>
                                </Border>
                                <StackPanel Height="10"></StackPanel>
                                <TextBlock Text="{Binding SkuName}" TextWrapping="Wrap"
                           Style="{StaticResource BaseTextBlockStyle}" Foreground="Black" />
                                <StackPanel Height="10"></StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Price :"
                                               Foreground="#F67534" 
                                               FontWeight="Bold"
                                               FontSize="18"/>
                                    <TextBlock Text="{Binding SkuPrice}" TextWrapping="Wrap" FontWeight="Bold" 
                                        Style="{StaticResource BaseTextBlockStyle}" Foreground="Black"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                                <StackPanel Height="30"></StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <!--<Grid HorizontalAlignment="Left" Height="45" Margin="0,1,0,0" Background="Orange" VerticalAlignment="Top" Width="399">
            <Image Source="/Assets/healthglowLogo.png" Width="200" Height="40" Stretch="Fill"/>
        </Grid>-->

        </Grid>
    </Grid>
</Page>
